<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="io.cristianbara.github.myShoppingList" version="1.0.0">
  <name>My Shopping List</name>
  <description>Organize your shopping with this easy to use app.</description>
  <author href="http://cristianbara.github.io" email="cristian.dan.bara@gmail.com">CB web dev.</author>
  <content src="index.html"/>
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="handset"/>
  <preference name="fullscreen" value="false"/>
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/> 
  <preference name="exit-on-suspend" value="false"/>  
  <preference name="disable-cursor" value="false"/>  
  <preference name="android-installLocation" value="preferExternal"/>
  
  
 
  
  <icon src="icon_l.png"/>
  <icon src="icon_l.png" gap:platform="android" gap:qualifier="ldpi"/>
  <icon src="icon_m.png" gap:platform="android" gap:qualifier="mdpi"/>
  <icon src="icon_l.png" gap:platform="android" gap:qualifier="hdpi"/>
  <icon src="icon_l.png" gap:platform="android" gap:qualifier="xhdpi"/>
  <icon src="icon_m.png" gap:platform="blackberry"/>
  <icon src="icon_m.png" gap:platform="blackberry" gap:state="hover"/>
  <icon src="icon_x.png" gap:platform="ios" width="57" height="57"/>
  <icon src="icon_x.png" gap:platform="ios" width="72" height="72"/>
  <icon src="icon_m.png" gap:platform="ios" width="114" height="114"/>
  <icon src="icon_l.png" gap:platform="ios" width="144" height="144"/>
  <icon src="icon_l.png" gap:platform="webos"/>
  <icon src="icon_l.png" gap:platform="winphone"/>
  <icon src="icon_l.png" gap:platform="winphone" gap:role="background"/>
    
  <splash src="splash.png"/>
    
  <platform name="android"> 
      <access origin="*" onlyInBrowser="true" />
  </platform>
    
  <platform name="ios">    
  </platform>
</widget>